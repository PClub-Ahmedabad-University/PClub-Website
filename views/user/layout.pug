doctype html
html
	head
		block title
			title= title

		meta(charset='UTF-8')
		meta(name='viewport' content='width=device-width, initial-scale=1.0')

		link(href='https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;700&family=Raleway:wght@300;400;700&display=swap' rel='stylesheet')
		link(rel='stylesheet' href='/css/themify-icons.css')
		link(rel='stylesheet' href='/css/font-awesome.min.css')
		link(rel="stylesheet" href="/css/boxicons.css")
		link(rel='stylesheet' href='/css/style.css')

		block stylesheet


	body 
		header.header
			.logo-container
				.logo
					img(src='/images/pclub_white_logo.png' alt='P-Club Logo')
			nav.nav-menu

				.hamburger
					.line
					.line
					.line

				ul.nav-items
					block home
						li
							a(href='/') Home
					block event
						li
							a(href='/event') Events
					block announcement
						li
							a(href='/announcement') Announcements		
					block resource 
						li
							a(href='/resource') Resources
					block about
						li
							a(href='/about-us') About Us

		block content

		.email-section
			.container
				.row
					.left
						h1= footer.emailTitle
						p= footer.emailSubtitle
					.right
						.email-field
							input.primary-field(type='email' name='email' placeholder='Email Address')
						.submit-button
							a.btn-liquid(href='#')
								span.inner
									| Submit

		.footer-section
			svg(width='100%' height='70' viewbox='0 2 1920 201' fill='none' preserveaspectratio='none')
				path(d='M1143.41 185.915C1388.86 209.95 1641.76 208.652 1920 157.048V0L0.00012207 0.544128V180.069C0.00012207 185.915 98.5248 154.812 462.72 143.972C826.916 133.133 897.967 161.881 1143.41 185.915Z' fill='white')
			.container
				.footer-left
					a(href='#')
						img(src='./images/pclub_white_logo.png' alt='')
					.copyright-text
						p
							| &copy; 2020 Design with 
							span(style="color:red;") &#10084;
							|  By
							a(href='https://www.linkedin.com/in/devarsh-patel-558729178/' target='_blank')
								strong
									|  Devarsh
									| Patel
							|  &amp;
							a(href='https://www.linkedin.com/in/parth-sarkhelia-b4389719b/' target='_blank')
								strong
									|  Parth
									| Sarkhelia
				.footer-right
					ul#social
						li
							a(target='_blank' href='#')
								i.bx.bxl-facebook
						li
							a(target='_blank' href='#')
								i.bx.bxl-twitter
						li
							a(target='_blank' href='#')
								i.bx.bxl-google-plus
						li
							a(href='https://www.instagram.com/ahduni_programmingclub/' target='_blank' )
								i.bx.bxl-instagram(aria-hidden='true')
					ul.footer-menu
						li
							a(href='#') Terms &amp; Conditions
						li
							a(href='#') Privacy Policy

		script(src='/assets/jquery.js')
		script(src='/js/script.js')
		script(src='/js/liquid.js')

		block javascripts