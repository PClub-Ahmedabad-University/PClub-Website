        .container
            h2  CMS
                a(href="/admin/cms/edit") 
                    i.bx.bxs-message-square-edit
            ol
                li
                    a(href='/admin/') Home
                li CMS

    .body-container

        table
            thead 
                tr
                    th.title.start
                        a(href='#') Homepage
                tbody
                    tr
                        td
