                    tr
                        td
                            .tableRow
                                .cms Upcoming Event Sub-Title
                                .value= cms.event.upcomingEventSubtitle
                    tr
                        td
                            .tableRow
                                .cms All Event Title
                                .value= cms.event.allEventTitle

            thead 
                tr
                    th.title
                        a(href='#') About Us
                tbody
                    tr
